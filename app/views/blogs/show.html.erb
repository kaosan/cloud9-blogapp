<div class="container">
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <h1>ブログ詳細画面</h1>
      <p>タイトル:<%= @blog.title %></p>
      <p>
        画像:<%= image_tag @blog.image, :class =>'img-responsive center-block' %>
        </p>
      <p>内容:<%= @blog.content %></p>

      <% unless @blog.user_id == current_user.id %>
        <% if @favorite.present? %>
          <%= link_to 'お気に入りを削除する', favorite_path(id: @favorite.id), method: :delete, class:'tn outline btn-primary' %>
        <% else %>
          <%= link_to 'お気に入り', favorites_path(blog_id: @blog.id), method: :post, class:'btn outline btn-info' %>
        <% end %>
      <% end %>
      <br>

      <%= link_to "ブログ一覧画面に戻る", blogs_path, class:'back_show' %>
    </div>
  </div>
</div>
