<div class="text-center">
  <h1>ブログ一覧</h1>
  <p><%= notice %></p>
  <div class="container">
    <div class="row">
      <% @blogs.each do |blog| %>
        <div class="col-xs-12 col-md-6">

          <p>タイトル：<%= blog.title %></p>
          <p>内容：<%= blog.content %></p>

          <span><%= link_to '詳細', blog_path(blog.id), class:'btn outline btn-primary' %></span>
          <span><%= link_to '編集', edit_blog_path(blog.id), data: {confirm: '本当に編集しますか？'}, class: 'btn outline btn-info' %></span>
          <span><%= link_to '削除', blog_path(blog.id),method: :delete, data: {confirm: '本当に削除しますか？'}, class:'btn outline btn-dander' %></span>
        </div>
      <% end %>
    </div>
  </div>
  <br>
  <%= link_to '新しくブログを作成する', new_blog_path, class:'new_blog' %>
</div>
